<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dsw.readeverywhere.mapper.UserMapper">
    <select id="selectUserByNameAndPassword" resultType="com.dsw.readeverywhere.model.User">
        select * from user_login where name = #{name} and password = #{password}
    </select>
    <select id="selectUserByPhone" resultType="com.dsw.readeverywhere.model.User">
        select * from user_login where phone = #{phone}
    </select>
</mapper>